    <bean id="textEditor5" class="spring.Autowired.TextEditor3"
          autowire="constructor">
        <property name="name" value="AutoWireByName"/>
    </bean>
    <bean id="spellChecker50" class="spring.Autowired.SpellChecker3">
    </bean>
</beans>